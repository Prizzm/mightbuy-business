<%= form_for @lead_config, url: lead_config_path, method: :put do |f| -%>
  <%= f.label :include_liability, "Include Release of Liability?" -%>
  <%= f.radio_button :include_liability, true  -%>
  <%= f.radio_button :include_liability, false -%>

  <%= f.label :liability, "Release of Liability Text" -%>
  <%= f.text_area :liability, rows: 15 -%>

  <%= f.label :ask_for_name, "Ask for Name?" -%>
  <%= f.radio_button :ask_for_name, true  -%>
  <%= f.radio_button :ask_for_name, false -%>

  <%= f.label :ask_to_join_list, "Ask to join mailing list?" -%>
  <%= f.radio_button :ask_to_join_list, true  -%>
  <%= f.radio_button :ask_to_join_list, false -%>

  <%= f.label :include_product_select, "Include product select?" -%>
  <%= f.radio_button :include_product_select, true  -%>
  <%= f.radio_button :include_product_select, false -%>

  <%= f.submit "Save" -%>
<% end -%>

