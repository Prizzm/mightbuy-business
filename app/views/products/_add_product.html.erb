<td colspan="5" class="add-deal">
  <%= form_for(@product, html: { class: "form-horizontal"} ) do |f| -%>
    <legend>
      Add a New Product
    </legend>
    <div class="row">
      <div class="span8">
        <div class="control-group">
          <label class="control-label">Product Name:</label>

          <div class="controls">
            <%= f.text_field :name, class: "span3" -%>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label">URL:</label>

          <div class="controls">
            <%= f.text_field :url, class: "span3" -%>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label">List Price:</label>

          <div class="controls">
            <%= f.text_field :price, class: "span3" -%>
          </div>
        </div>
        <div class="control-group">
          <div class="controls m-top5">
            <%= f.submit("Save Product", class: "btn btn-danger", :id => "save-product") -%>
            <a href="javascript:void(0)" class="btn btn-danger m-left5 product-create-cancel"> Cancel </a>
          </div>
        </div>
      </div>
  <% end -%>
</td>

