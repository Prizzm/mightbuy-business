<div class="release-liability">
  <%= form_for @lead, url: retail_lead_path(@lead), method: :put, html: { multipart: true } do |f| -%>
  <div class="row-fluid">
    <div class="span12">
      <img class="img-polaroid pull-left m-right25" src="/assets/company-logo.gif" />
      <h1>Acme Industries Pvt. Ltd.</h1>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="well">
        <div class="picture">
          &nbsp;
        </div>
        <div class="clearfix">
          <div class="row-fluid">
            <div class="span4">
              <button class="btn btn-danger" type="button">
                Take snap
              </button>
            </div>
            <div class="span4">
              <%= f.file_field :photo %>
              <%= f.hidden_field :retained_photo %>
            </div>
            <div class="span4">
              <button class="btn btn-danger pull-right" type="button">
                Retake snap
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- if @business.lead_config.include_product_select? -%>
    <div class="row-fluid">
      <div class="span12">
        <%= f.label :product_id, 'Select a Product' -%>
        <%= f.select :product_id, product_list_helper(@business) -%>
      </div>
    </div>
  <% end -%>

  <br/>
  <div class="row-fluid">
    <div class="span12">
      <%= f.submit 'Update Customer Lead', :class => 'btn btn-large btn-danger' %>
      <button class="btn btn-large btn-danger pull-right" type="button">
        Send Now
      </button>
    </div>
  </div>
  <% end -%>
  <br/>
  <hr/>
  <small>powered by mightbuy.it</small>
</div>
