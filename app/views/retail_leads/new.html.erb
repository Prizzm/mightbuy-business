<div class="release-liability clearfix">
  <%= form_for @lead, url: retail_leads_path do |f| -%>
  <div class="row-fluid">
    <div class="span12">
      <%= link_to("Logout", destroy_business_staff_session_path, method: :delete, class: 'btn btn-danger pull-right') -%>
      <%= image_tag(business_form_logo_url_helper(@business), height: 80, class: "img-polaroid pull-left m-right25") -%>
      <h1><%= @business.name -%></h1>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <div class="well">
        <div class="overflow">
          <h3>Release and Waiver of Liability, Assumption of Risk, and Indemnity Agreement</h3>
          <p> <%= raw md2html(@business.business_config.liability) -%> </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <div id="business-liability"></div>
      <%- if @business.business_config.ask_for_name? -%>
        <%= f.label :name, 'Full Name of participant or Parent/Guardian, if participant is a minor.' -%>
        <%= f.text_field  :name -%>
      <% end -%>

      <%- if @business.business_config.ask_for_phonenumber? %>
        <%= f.label :phone_number, 'Phone Number' %>
        <%= f.phone_field  :phone_number %>
      <% end %>

      <%- if @business.business_config.ask_for_emergency_number? %>
        <%= f.label :emergency_phone_number, 'Emergency contact phone number *' %>
        <%= f.phone_field  :emergency_phone_number %>
      <% end %>

      <%- if @business.business_config.ask_for_helmet_waiver? %>
        <%= f.label :ask_for_helmet_waiver, 'I have been encouraged to use a bicycle helmet, and I decline using the helmet during this ride.*' %>
        <%= f.text_field  :helmet_waiver %>
      <% end %>

      <%= f.label :email, 'Email' -%>
      <%= f.email_field :email -%>


    </div>
  </div>

  <%- if @business.business_config.ask_to_join_list? -%>
  <div class="row-fluid">
    <div class="span12">
      <label class="checkbox"> <%= f.check_box  :join_list, {:checked=>true}  -%> Join Mail List
	    <%= @business.business_config.join_list_description -%>
	    </label>
    </div>
  </div>
  <% end -%>

  <div class="row-fluid">
    <div class="span12">
      <%= f.submit 'Next', :class => 'btn btn-large btn-danger' %>
    </div>
  </div>

  <% end -%>
  <br/>
  <hr/>
  <small class="pull-left">powered by</small>
  <%= link_to("", "http://www.mightbuy.it", class: 'logo-small', target: '_blank') -%>
</div>
