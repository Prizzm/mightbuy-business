<%= form_for(@business, :url => business_path) do |f| -%>
  <div class="row">
    <div class="span8">
      <legend>
        Profile Information
      </legend>
      <img class="img-polaroid pull-left" src="/assets/company-logo.gif"/>

      <div class="pull-left">
        <div>
          <button class="btn btn-yellow w100 pull-left" type="submit">
            Use Image
            <br/>
            From Web
          </button>
        </div>
        <div>
          <button class="btn btn-yellow w100 pull-left clear-left" type="submit">
            Upload
          </button>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span4">
      <label>Business Name</label>
      <%= f.text_field :name -%>

      <label>Website Address</label>
      <div class='business-urls'>
        <%= fields_for :business_urls do |business_url| -%>
          <%= business_url.text_field :domain -%>

          <a href="javascript:void(0);" class="btn btn-yellow btn-add more-url">
            <i class="icon-plus"></i>
          </a>
        <% end -%>
      </div>

      <label>Phone</label>
      <%= f.text_field :phone -%>

      <button class="btn btn-yellow btn-add" type="submit">
        <i class="icon-plus"></i>
      </button>

      <label>Address</label>
      <%= f.text_field :address -%>
      <button class="btn btn-yellow btn-add" type="submit">
        <i class="icon-plus"></i>
      </button>
    </div>
    <div class="span4">
      <label>Email Address</label>
      <%= f.text_field :email -%>
      <button class="btn btn-yellow btn-add" type="submit">
        <i class="icon-plus"></i>
      </button>

      <label>Twitter Handle</label>
      <%= f.text_field :twitter_handle -%>
      <button class="btn btn-yellow btn-add" type="submit">
        <i class="icon-plus"></i>
      </button>

      <label>Facebook Website Address</label>
      <%= f.text_field :facebook_url -%>

      <button class="btn btn-yellow btn-add" type="submit">
        <i class="icon-plus"></i>
      </button>

      <label>Pinterest</label>
      <%= f.text_field :pinterest_handle -%>
      <button class="btn btn-yellow btn-add" type="submit">
        <i class="icon-plus"></i>
      </button>
    </div>
  </div>

  <button class="<%= save_profile_button_class -%>" type="submit">
    Save Profile Information
  </button>

<% end -%>
