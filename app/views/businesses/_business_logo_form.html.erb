<%= form_for(business, url: business_path, html: { id: "business_logo_form", multipart: true }, remote: true) do |f| -%>
<div class="row">
  <div class="span8">
    <legend>
      Profile Information
    </legend>
    <div class="company-logo">
      <%= image_tag(business_form_logo_url_helper(business), width: 160, height: 80) -%>
      <div class="loader hide"></div>
    </div>
    <%= f.file_field :logo, style: "display: none" -%>
    <%= f.hidden_field :retained_logo %>
    <div id="business_logo_url_wrapper" class="hide">
      <h4> Paste a URL for Web Image here </h4>
      <hr class="m-bot10 m-top10"/>
      <div class="row-fluid">
        <div class="span2 a-right">
          URL:
        </div>
        <div class="span10">
          <%= f.text_field :logo_url %>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span2">
          &nbsp;
        </div>
        <div class="span10">
          <button class="btn btn-yellow save-url" type="button">
            Upload
          </button>
        </div>
      </div>
    </div>
    <div class="pull-left">
      <div>
        <button id="logo-url-button" class="btn btn-yellow w100 pull-left" type="button">
          Use Image
          <br/>
          From Web
        </button>
      </div>
      <div>
        <button id="logo-upload-button" class="btn btn-yellow w100 pull-left clear-left" type="submit">
          Upload
        </button>
      </div>
    </div>
  </div>
</div>
<% end -%>