<% if flash[:notice] -%>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:notice] -%>
  </div>
<% end -%>

<% if flash[:info] -%>
  <div class="alert alert-info">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:info] -%>
  </div>
<% end -%>

<% if flash[:error] -%>
  <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:error] -%>
  </div>
<% end -%>

