<td colspan="5" class="add-deal">
  <%= form_for(@business_staff, :url => business_business_staffs_path,html: {class: "form-horizontal"}) do |f| -%>
    <legend>
      Add new Staff
    </legend>
    <div class="row">
      <div class="span8">
        <div class="control-group">
          <label class="control-label">Name :</label>

          <div class="controls">
            <%= f.text_field :name, class: "span3" -%>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label"> Email :</label>

          <div class="controls">
            <%= f.text_field :email, class: "span3" -%>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label"> Password: </label>
          <div class="controls">
            <%= f.password_field :password -%>
          </div>
        </div>

        <div class="control-group">
          <div class="controls m-top5">
            <%= f.submit("Add Staff", class: "btn btn-danger") -%>
            <a href="javascript:void(0)" class="btn btn-danger m-left5 cancel-new-staff"> Cancel </a>
          </div>
        </div>
      </div>
  <% end -%>
</td>


