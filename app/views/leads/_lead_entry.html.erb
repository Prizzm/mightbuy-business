<td><%= lead.created_at.to_date -%></td>
<td><%= lead.name || "-" -%></td>
<td><%= lead.email -%></td>
<% if lead.product.length > 0 %>
<td><%= lead.product.map(&:name).join(', ') %></td>
<% else %>
<td>No Product</td>
<% end %>
<td><%= lead.humanized_status -%></td>
<td>
  <%= link_to edit_lead_path(lead) do -%>
    <button class="btn btn-mini">
      <i class="icon-pencil"></i>
    </button>
  <% end -%>

  <%= link_to lead_path(lead), method: :delete, remote: true,
      confirm: "Do you want to delete this lead?" do -%>
    <button class="btn btn-mini btn-danger">
      <i class="icon-remove icon-white"></i>
    </button>
  <% end -%>
</td>
