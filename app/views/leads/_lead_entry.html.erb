<tr id="lead-entry-#{lead.id}">
  <td><i class="icon-remove"></i></td>
  <td><%= mail_to lead.email -%></td>
  <td><%= lead.name || "-" -%></td>
  <td><%= link_to("view", lead.product ? product_path(lead.product) : "#") -%></td>
  <td>Sent</td>
  <td>
    <button class="btn btn-mini">
      <i class="icon-pencil"></i>
    </button>
    <%= link_to lead_path(lead), method: :delete, remote: true,
        confirm: "Do you want to delete this lead?" do -%>
      <button class="btn btn-mini btn-danger">
        <i class="icon-remove icon-white"></i>
      </button>
    <% end -%>
  </td>
</tr>
