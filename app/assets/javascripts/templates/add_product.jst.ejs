      <legend>
        Add a New Product
      </legend>
      <div class="row">
        <div class="span8">
          <div class="control-group">
            <label class="control-label">Product Name:</label>

            <div class="controls">
              <input class="span3" type="text"/>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label">URL:</label>

            <div class="controls">
              <input class="span3" type="text"/>
            </div>
          </div>
